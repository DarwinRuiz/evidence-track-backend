{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",

        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",

        "lib": ["ES2020"],
        "types": ["node", "jest"],

        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true
    },
    "include": ["src"],
    "exclude": ["build", "node_modules"]
}
